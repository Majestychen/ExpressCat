/**index.wxss**/
.search-box{
  width: 100%;
  height: 100px;
  position: relative;
}

.head-img image{
  width: 80px;
  height: 80px;
  position: absolute;
  left: 40%;
  top:-80px;
  transform: rotate(-40deg);
}

.search-input{
  width: 90%;
  margin: 0 auto;
  border-radius: 5px;
  border: 1px solid #4FBDFA;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-input input{
  font-size: 22px;
  height: 60px;
  line-height: 60px;
  display: inline-flex;
  flex: 0 0 80%;
  margin-left: 10px;
}

.search-input image{
  width: 30px;
  height: 30px;
  display: inline-flex;
  flex: 0 0 1;
  margin-right: 10px;
}

.placeholderstyle{
  color: rgba(0,0,0,.6);
  font-size: 16px;
  font-weight: 400;
}

/*按钮*/
.search-button{
  margin: 10%;
  position: relative;
}

.search-button button{
    color: white;
    background-color: #4FBDFA;
}


/*分割线*/
.explain-line{
  width: 100%;
  height: 30px;
  line-height: 30px;
  background-color: #F8F8F8; 
  position: relative;
  margin-top: 100px;
  display: flex;
  align-items: center;
}

.explain-block{
  width: 5px;
  height: 30px;
  background-color: #EF6262;
  display: inline-block;
}

.explain-text{
  display: inline-block;
  color: #969696;
  margin-left: 5%;
  font-size: 16px;
}
